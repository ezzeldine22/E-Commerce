{
  "openapi": "3.0.1",
  "info": {
    "title": "E-Commerce",
    "version": "1.0"
  },
  "paths": {
    "/Product": {
      "post": {
        "tags": [
          "Product"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AddProductDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/AddProductDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/AddProductDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "AddProductDto": {
        "required": [
          "productCategoryName",
          "productDescription",
          "productName",
          "productPrice",
          "productStockQuantity"
        ],
        "type": "object",
        "properties": {
          "productName": {
            "minLength": 1,
            "type": "string"
          },
          "productDescription": {
            "minLength": 1,
            "type": "string"
          },
          "productPrice": {
            "type": "number",
            "format": "double"
          },
          "productStockQuantity": {
            "type": "integer",
            "format": "int32"
          },
          "productCategoryName": {
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    }
  }
}